{
	"name": "Duo",
	"version": "0.0.1",
	"description": "1-on-1 peer learning for Khan Academy.",
	"permissions": [
		"webRequest",
		"activeTab",
		"tabs",
		"declarativeContent",
		"*://*.khanacademy.org/",
		"*://duo-learn.herokuapp.com/",
		"http://127.0.0.1/*",
		"storage"
	],
	"background": {
		"matches": ["https://*.khanacademy.org/*"],
		"page": "background.html",
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["https://*.khanacademy.org/*"],
			"css": ["styles.css", "content/styles/content.css"],
			"js": [
				"thirdParty/handlebars.min.js", 
				"thirdParty/jquery-3.3.1.min.js",
				"content/scripts/content-helpers.js",
				"content/scripts/flash-helpers.js",
				"content/scripts/scrape-unit-view-task.js",
				"content/scripts/struggling-detector.js"
			]
		}
	],
	"content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://apis.google.com; object-src 'self';",
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16-dimmed.png",
      		"48": "images/icon48-dimmed.png",
			"128": "images/icon128-dimmed.png",
			"512": "images/icon512-dimmed.png"  
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png",
		"512": "images/icon512.png"  
	},
	"web_accessible_resources": [
		"images/*",
		"templates/*",
		"thirdParty/fonts/*",
		"content/html/*",
		"content/css/*"
	],
	"manifest_version": 2
}