{
	"name": "Duo",
	"version": "1.0",
	"description": "1-on-1 peer learning for Khan Academy.",
	"permissions": [
		"webRequest",
		"activeTab",
		"tabs",
		"declarativeContent",
		"*://*.khanacademy.org/",
		"*://duo-learn.herokuapp.com/",
		"http://127.0.0.1/*",
		"storage"
	],
	"background": {
		"scripts": ["thirdParty/jquery-3.3.1.min.js", "background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["https://*.khanacademy.org/*"],
			"css": ["styles.css"],
			"js": ["thirdParty/handlebars.min.js", "thirdParty/jquery-3.3.1.min.js",
				"content-script.js",
				"dispatch.js",
				"dom-parser.js",
				"ui.js",
				"duo-api.js"]
		}
	],
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon16-dimmed.png",
      "48": "images/icon48-dimmed.png",
			"128": "images/icon128-dimmed.png",
			"512": "images/icon512-dimmed.png"  
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png",
		"512": "images/icon512.png"  
	},
	"web_accessible_resources": [
		"images/*",
		"templates/*"
	],
	"manifest_version": 2
}